<?xml version="1.0" encoding="UTF-8"?>

<!-- MatcherOpenCV parameters 
	verbose :	0 -> no debug
				1 -> show matches
				2 -> show matches + show detected features

-->  
 <Matcher verbose="1">
 	
 	
	 <!-- RANSAC settings
	 	verbose : 	0 -> no debug
	 				1 -> print final result
	 				2 -> print every iteration
		errorVersion :	0 -> Euclidean error
	 					1 -> Reprojection error 
	 	inlierThresholdEuclidean : maximal Euclidean error of inlier in RANSAC (in meters)
	 	inlierThresholdReprojection : maximal reprojection error of inlier in RANSAC (in pixels)
	 	minimalInlierRatioThreshold : minimal ratio of inliers to assume that estimated best model is correct (values: from 0 to 1)
	 	usedPairs : numbers of pairs used to create model in RANSAC iteration
	 -->
	<RANSAC verbose="1" errorVersion="1" inlierThresholdEuclidean="0.02" inlierThresholdReprojection="8.0"
		minimalInlierRatioThreshold="0.3" usedPairs="3">
	</RANSAC>
    	
    <!-- Matching settings
    	detector : 		FAST, ORB, SURF, SIFT
    	descriptor :	BRIEF, ORB, LDB, SURF, SIFT
    		
    	Recommended configurations: FAST-BRIEF, ORB-ORB, ORB-LDB, SURF-SURF, SIFT-SIFT
    		
    	Used norms in matching:  Hamming (ORB, BRIEF, LDB), L2 (SURF, SIFT)
    		
    	TODO: LDB didn't compile due to LDB issues
     
     
		TODO: Create description for tracking parameters    
    	-	useInitialFlow, winSize, maxLevels, maxIter, eps
    -->
    <MatcherOpenCV detector="ORB" descriptor="SURF" useInitialFlow="0" winSize="7" maxLevels="3" maxIter="30" eps="0.01"> </MatcherOpenCV>
    <Parameters maxAngleBetweenFrames="0.3"> </Parameters>
</Matcher>
